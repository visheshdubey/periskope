// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int       @id @default(autoincrement())
  name             String
  phone            String
  email            String?
  avatar           String?
  isPhoneConnected Boolean   @default(false)
  created_at       DateTime  @default(now())
  updated_at       DateTime? @updatedAt
  projects         Project[]
  projectId        Int?
  Member           Member[]
}

model Project {
  id         Int       @id @default(autoincrement())
  name       String
  color      String    @default("text-blue-600")
  bgColor    String    @default("text-blue-50")
  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt
  users      User[]
  Groups     Group[]
}

model Group {
  id                         Int                  @id @default(autoincrement())
  name                       String
  avatar                     String?
  lastActive                 DateTime?
  unreadMessages             Int                  @default(0)
  project                    Project              @relation(fields: [projectId], references: [id])
  unreadMessageCount         Int                  @default(0)
  isDisapperingMessageActive Boolean              @default(false)
  sendMessageProvision       SendMessageProvision @default(ALL)
  created_at                 DateTime             @default(now())
  updated_at                 DateTime?            @updatedAt
  projectId                  Int
  Members                    Member[]
  Labels                     Label[]
  Tickets                    Tickets[]
}

model Tickets {
  id         Int       @id @default(autoincrement())
  name       String
  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt
  group      Group     @relation(fields: [groupId], references: [id])
  groupId    Int
}

model Member {
  id         Int       @id @default(autoincrement())
  name       String
  phone      String
  raisedBy   User      @relation(fields: [userId], references: [id])
  group      Group     @relation(fields: [groupsId], references: [id])
  avatar     String?
  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt
  groupsId   Int
  userId     Int
}

model Label {
  id         Int       @id @default(autoincrement())
  name       String
  color      String    @default("gray")
  group      Group     @relation(fields: [groupsId], references: [id])
  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt
  groupsId   Int
}

enum SendMessageProvision {
  ALL
  ONLY_ADMINS
}
